// VS Code Settings
{
  // Disable schema validation to prevent MCP warning
  "json.schemaValidation.enable": false,

  // Additional JSON validation exclusions
  "json.validate.enable": false,
  "json.schemas": [],

  // CSS/SCSS/LESS validation
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Editor settings
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.inlineSuggest.enabled": true,

  // Tailwind CSS configuration
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "tailwindCSS.experimental.classRegex": [
    "class=[\"']([^\"']*)[\"']"
  ],

  // JSON Schema configuration - disable all
  "json.schemaDownload.enable": false,
  "json.schemaStore.enable": false
}
